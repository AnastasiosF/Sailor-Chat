# Environment variables for SailorChat Client
# Copy this file to .env and fill in your actual values

# API Configuration
VITE_API_URL=http://localhost:3001/api
VITE_WS_URL=http://localhost:3001

# Supabase Configuration (for client-side auth if needed)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# App Configuration
VITE_APP_NAME=SailorChat
VITE_APP_VERSION=1.0.0

# Features
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_VOICE_MESSAGES=false
VITE_ENABLE_VIDEO_CALLS=false

# Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/*,application/pdf,text/plain
